<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tocel.jnitest.MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/bt_configure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="配置信息"
            tools:layout_editor_absoluteX="-36dp"
            tools:layout_editor_absoluteY="-18dp" />

        <Button
            android:id="@+id/bt_urlPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="urlProtol"
            tools:layout_editor_absoluteX="-23dp"
            tools:layout_editor_absoluteY="-17dp" />

        <Button
            android:id="@+id/bt_avformat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="avFormat"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-17dp" />

        <Button
            android:id="@+id/bt_avcodec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="avcodec"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-2dp" />

        <Button
            android:id="@+id/bt_avFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="avfilter"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="-16dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
